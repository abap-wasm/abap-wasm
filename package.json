{
  "name": "abap-wasm",
  "private": true,
  "scripts": {
    "downport": "rm -rf downport && cp src -r downport && cp test -r downport && abaplint --fix abaplint-downport.json",
    "testsuite": "echo RUNNING TESTSUITE && node test/testsuite.mjs",
    "quickjs": "echo RUNNING QuickJS && node test/quickjs.mjs",
    "scrypt": "echo RUNNING Scrypt-WASM && node test/scrypt.mjs",
    "sha256": "echo RUNNING SHA256 && node test/sha256.mjs",
    "unit": "rm -rf output && abap_transpile && echo RUNNING UNIT TEST && node output/index.mjs",
    "lint": "abaplint",
    "flame-graph-testsuite": "0x -o test/testsuite.mjs",
    "flame-graph-quickjs": "0x -o test/quickjs.mjs",
    "flame-graph-scrypt": "0x -o test/scrypt.mjs",
    "test": "npm run lint && npm run downport && npm run unit && npm run testsuite && npm run quickjs && npm run scrypt && npm run sha256"
  },
  "author": "Lars Hvam Petersen",
  "license": "MIT",
  "dependencies": {
    "@abaplint/cli": "^2.105.26",
    "@abaplint/runtime": "^2.8.8",
    "@abaplint/transpiler-cli": "^2.8.8",
    "@denorg/scrypt": "^4.3.4",
    "@jitl/quickjs-wasmfile-debug-sync": "^0.29.0",
    "@jitl/quickjs-wasmfile-release-sync": "^0.29.0",
    "0x": "^5.7.0",
    "js-scrypt": "^0.2.0",
    "scrypt-rs-wasm": "^0.1.2",
    "scrypt-wasm": "^0.1.1",
    "sha256-wasm": "^2.2.2"
  }
}
